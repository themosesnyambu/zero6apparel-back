{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es5",                                
    "module": "commonjs",
    "outDir":"dist",
    "strict": true,                                 
    "esModuleInterop": true,                        
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true       
  },
  "compileOnSave":true,
  "include": [
    "src"
  ]
}
