{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint", "prettier"
    ],
    "rules": {
        "linebreak-style": 0,
        "import/extensions":[
            "error",
            "ignorePackages",
            {
                "js":"never",
                "jsx":"never",
                "ts":"never",
                "tsx":"never"
            }
        ]
    },
    "settings":{
        "import/resolver":{
            "node":{
                "extensions":[".js", ".ts", ".tsx"]
            }
        }
    }
}
